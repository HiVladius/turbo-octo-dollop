{
  "name": "portfolio-vlad",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "powershell -ExecutionPolicy Bypass -File ./scripts/start-dev.ps1",
    "dev:blog": "cd microfrontends/angular-blog && npm start",
    "prebuild": "node scripts/convert-images.mjs",
    "build": "tsc -b && vite build",
    "build:blog": "cd microfrontends/angular-blog && npm run build",
    "build:all": "npm run build && npm run build:blog && npm run prepare:deploy",
    "prepare:deploy": "powershell -ExecutionPolicy Bypass -File ./scripts/prepare-deploy.ps1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "deploy": "npm run build:all && firebase deploy --only hosting",
    "deploy:preview": "npm run build:all && firebase hosting:channel:deploy preview",
    "deploy:staging": "npm run build:all && firebase use staging && firebase deploy --only hosting",
    "deploy:production": "npm run build:all && firebase use production && firebase deploy --only hosting",
    "preview:staging": "firebase use staging && firebase hosting:channel:deploy preview",
    "setup:firebase": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-firebase.ps1",
    "verify:staging": "powershell -ExecutionPolicy Bypass -File ./scripts/verify-deployment.ps1 -Environment staging",
    "verify:production": "powershell -ExecutionPolicy Bypass -File ./scripts/verify-deployment.ps1 -Environment production",
    "deploy:helper": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy.ps1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@tailwindcss/vite": "^4.1.6",
    "framer-motion": "^12.11.0",
    "gsap": "^3.13.0",
    "i18next": "^25.1.2",
    "lucide-react": "^0.510.0",
    "octokit": "^4.1.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.5.1",
    "react-router-dom": "^7.6.0",
    "resend": "^4.5.1",
    "tailwindcss": "^4.1.6",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "sharp": "^0.34.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "7.1.9"
  }
}
